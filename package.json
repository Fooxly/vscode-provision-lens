{
	"name": "todo-lens",
	"displayName": "TODO lens",
	"description": "A TODO/Notes lens based on keywords",
  "author": "Fooxly",
  "publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
  "keywords": [
    "vscode",
    "code",
		"todo",
		"fixme",
		"note",
		"notes",
		"lens",
		"keyword",
		"highlight",
		"syntax",
		"annotation"
  ],
	"homepage": "https://gitlab.com/fooxly/vscode-todo-lens",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/fooxly/vscode-todo-lens.git"
	},
	"bugs": {
		"url": "https://gitlab.com/fooxly/vscode-todo-lens/issues",
		"email": "services@fooxly.com"
	},
	"galleryBanner": {
			"color": "#272729",
			"theme": "dark"
	},
	"version": "1.2.3",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "*"
	],
	"main": "./lib/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todolens.list",
				"title": "todolens: List"
			}
		],
		"configuration": {
			"type": "object",
			"title": "TODO lens",
			"properties": {
				"todolens.hideWhenZero": {
					"type": "boolean",
					"default": true,
					"description": "If there are 0 TODOs in a single section it will not be shown"
				},
				"todolens.useHighlighting": {
					"type": "boolean",
					"default": true,
					"description": "If you want to use our syntax highlighting"
				},
				"todolens.caseSensitive": {
					"type": "boolean",
					"default": false,
					"description": "If the keywords need to be case sensitive or not"
				},
				"todolens.types": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "A single todo object",
						"properties": {
							"title": {
								"type": "string",
								"description": "The title that will be used at the top of each file"
							},
							"types": {
								"type": "array",
								"items": {
									"type": "string",
									"title": "Keyword"
								}
							}
							
						}
					},
					"default": [{
							"title": "üìù {0} TODOs",
							"types": [
								"TODO",
								"FIXME"
							]
						},
						{
							"title": "üìù {0} Notes",
							"types": [
								"NOTE"
							]
						}
					],
					"description": "All the different types of lenses"
				},
				"todolens.highlights": {
					"type": "array",
					"items": {
							"type": "object",
							"title": "A single highlight object",
							"properties": {
									"color": {
											"type": "string",
											"description": "The color of the keyword"
									},
									"backgroundColor": {
											"type": "string",
											"description": "The background color behind the keyword"
									},
									"overviewRulerColor": {
											"type": "string",
											"description": "The color that will be shown in the overview ruler"
									},
									"keyword": {
											"type": "string",
											"description": "The keyword that needs to be colored"    
									},
									"isWholeLine": {
											"type": "boolean",
											"description": "If the whole line needs to be colored or just the keyword"    
									},
									"colorSpaceAfter": {
											"type": "boolean",
											"description": "If the space just after the keyword (most likely a colon (:) needs to be colored as well"    
									},
									"caseSensitive": {
											"type": "boolean",
											"description": "If the keyword needs to be case sensitive"    
									}
							}
					},
					"default": [{
						"keyword": "TODO",
						"color": "#fff",
						"backgroundColor": "#f2b01f",
						"overviewRulerColor": "rgba(242, 176, 31, 0.8)",
						"isWholeLine": false,
						"colorSpaceAfter": false,
						"caseSensitive": true
					},{
						"keyword": "FIXME",
						"color": "#fff",
						"backgroundColor": "#d85f88",
						"overviewRulerColor": "rgba(216, 95, 136, 0.8)",
						"isWholeLine": false,
						"colorSpaceAfter": false,
						"caseSensitive": false
					},{
						"keyword": "NOTE",
						"color": "#aaa",
						"backgroundColor": "#434343",
						"overviewRulerColor": "rgba(67, 67, 67, 0.8)",
						"isWholeLine": false,
						"colorSpaceAfter": false,
						"caseSensitive": true
					}],
					"description": "All the different types of highlights"
				}
			}
		}	
	},

	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"babel-cli": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"eslint": "^5.13.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
