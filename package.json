{
	"name": "provision-lens",
	"displayName": "Provision Lens",
	"description": "Providing a simple way to view all notes in your workspace based on keywords.",
	"author": "Fooxly",
	"publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
	"keywords": [
		"vscode",
		"code",
		"todo",
		"fixme",
		"note",
		"notes",
		"lens",
		"keyword",
		"highlight",
		"syntax",
		"annotation"
	],
	"homepage": "https://gitlab.com/fooxly/vscode-provision-lens",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/fooxly/vscode-provision-lens.git"
	},
	"bugs": {
		"url": "https://gitlab.com/fooxly/vscode-provision-lens/issues",
		"email": "bugs@fooxly.com"
	},
	"galleryBanner": {
		"color": "#272729",
		"theme": "dark"
	},
	"version": "2.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./lib/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "provisionlens.listall",
				"title": "Provision Lens: List"
			},
			{
				"command": "provisionlens.lastNote",
				"title": "Provision Lens: Previous Note"
			},
			{
				"command": "provisionlens.nextNote",
				"title": "Provision Lens: Next Note"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "provisionlens.lastNote",
					"group": "provisionlens@1"
				},
				{
					"command": "provisionlens.nextNote",
					"group": "provisionlens@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "provisionlens.listall",
				"key": "ctrl+shift+L",
				"mac": "cmd+shift+L",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Provision lens",
			"properties": {
				"provisionlens.overview": {
					"type": "string",
					"enum": [
						"auto",
						"both",
						"always-both",
						"statusbar",
						"top",
						"always-top",
						"off"
					],
					"default": "auto",
					"description": "Location in editor to show a quick overview of all notes"
				},
				"provisionlens.highlighting": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable syntax highlighting"
				},
				"provisionlens.dropdownType": {
					"type": "string",
					"enum": [
						"compact",
						"normal",
						"smart",
						"smart_compact"
					],
					"default": "smart",
					"description": "The appereance of the dropdown items"
				},
				"provisionlens.dropdownOrder": {
					"type": "string",
					"enum": [
						"line_numbers_asc",
						"line_numbers_desc",
						"category"
					],
					"default": "line_numbers_asc",
					"description": "The order in which items need to be shown in the dropdown"
				},
				"provisionlens.alwaysShow": {
					"type": "boolean",
					"default": false,
					"description": "Show the lens when there are no notes"
				},
				"provisionlens.position": {
					"type": "string",
					"enum": [
						"above_functions",
						"above_classes",
						"both",
						"off"
					],
					"default": "both",
					"description": "Show a seperate lens above functions and/or classes"
				},
				"provisionlens.ignoreFiles": {
					"type": "array",
					"description": "Array of ignore files for the lens to blacklist (relative to project root)",
					"items": {
						"type": "string",
						"description": "Name of the file which includes a list of files to ignore"
					},
					"default": [
						".gitignore",
						".ignore"
					]
				},
				"provisionlens.whitelist": {
					"type": "array",
					"description": "Array of files/folders for the lens to whitelist (relative to project root)",
					"items": {
						"type": "string",
						"description": "The path or filename"
					}
				},
				"provisionlens.keywords": {
					"type": "object",
					"description": "Array of keywords to use",
					"default": {
						"TODO": {
							"color": "#fff",
							"backgroundColor": "#f2b01f",
							"overviewRulerColor": "rgba(242, 176, 31, 0.8)",
							"isWholeLine": false,
							"useColons": true,
							"caseSensitive": true
						},
						"FIXME": {
							"color": "#fff",
							"backgroundColor": "#d85f88",
							"overviewRulerColor": "rgba(216, 95, 136, 0.8)",
							"isWholeLine": false,
							"useColons": true,
							"caseSensitive": false
						},
						"NOTE": {
							"color": "#aaa",
							"backgroundColor": "#434343",
							"overviewRulerColor": "rgba(67, 67, 67, 0.8)",
							"isWholeLine": false,
							"useColons": true,
							"caseSensitive": true
						}
					}
				},
				"provisionlens.groups": {
					"type": "array",
					"description": "Array of group names with designated keywords (case sensitive)",
					"items": {
						"type": "object",
						"title": "A keyword group object",
						"properties": {
							"keywords": {
								"type": "array",
								"description": "The keywords that belong to this group",
								"items": {
									"type": "string",
									"title": "The keyword that belongs to the group (not case sensitive)"
								}
							},
							"text": {
								"type": [
									"object",
									"string"
								],
								"description": "The text color of the keyword",
								"properties": {
									"one": {
										"type": "string",
										"description": "The text that will be shown when there is only 1 item"
									},
									"multiple": {
										"type": "string",
										"description": "The text that will be shown when there are 0 or more than 1 items"
									}
								}
							}
						}
					},
					"default": [
						{
							"keywords": [
								"TODO",
								"FIXME"
							],
							"tooltip": "These are all the 'TODO' and 'FIXME' notes in this file",
							"text": {
								"one": "üìù {0} TODO",
								"multiple": "üìù {0} TODOs"
							}
						},
						{
							"keywords": [
								"NOTE"
							],
							"tooltip": "These are all the notes in this file",
							"text": {
								"one": "üìù {0} Note",
								"multiple": "üìù {0} Notes"
							}
						}
					]
				},
				"provisionlens.translations": {
					"type": "object",
					"title": "Translations",
					"description": "Object with translations",
					"properties": {
						"noNoteFound": {
							"type": "string",
							"description": "No note found message text"
						},
						"dropdownText": {
							"type": "string",
							"description": "Dropdown information text"
						},
						"key_not_found": {
							"type": "string",
							"description": "No key found text"
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/underscore": "^1.9.0",
		"underscore": "^1.9.1"
	}
}
