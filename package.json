{
	"name": "todo-lens",
	"displayName": "TODO lens",
	"description": "A TODO/Notes lens based on keywords",
  "author": "Fooxly",
  "publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
  "keywords": [
    "vscode",
    "code",
		"todo",
		"notes",
		"lens"
  ],
	"homepage": "https://gitlab.com/fooxly/todo-lens",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/fooxly/todo-lens.git"
	},
	"bugs": {
		"url": "https://gitlab.com/fooxly/todo-lens/issues",
		"email": "services@fooxly.com"
	},
	"galleryBanner": {
			"color": "#272729",
			"theme": "dark"
	},
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "*"
	],
	"main": "./lib/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "TODO lens",
			"properties": {
				"todolens.hideWhenZero": {
					"type": "boolean",
					"default": true,
					"description": "If there are 0 TODOs in a single section it will not be shown"
				},
				"todolens.caseSensitive": {
					"type": "boolean",
					"default": false,
					"description": "If the keywords need to be case sensitive or not"
				},
				"todolens.types": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "A single todo object",
						"properties": {
							"title": {
								"type": "string",
								"description": "The title that will be used at the top of each file"
							},
							"types": {
								"type": "array",
								"items": {
									"type": "string",
									"title": "Keyword"
								}
							}
							
						}
					},
					"default": [{
							"title": "üìù {0} TODOs",
							"types": [
								"TODO",
								"FIXME"
							]
						},
						{
							"title": "üìù {0} Notes",
							"types": [
								"NOTE"
							]
						}
					],
					"description": "All the different types of lenses"
				}
			}
		}	
	},

	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"babel-cli": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"eslint": "^5.13.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
