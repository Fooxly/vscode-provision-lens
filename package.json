{
	"name": "provision-lens",
	"displayName": "Provision Lens",
	"description": "Providing a simple way to view all notes in your workspace based on keywords.",
	"author": "Fooxly",
	"publisher": "Fooxly",
	"license": "MIT",
	"icon": "assets/icon.png",
	"keywords": [
		"vscode",
		"code",
		"todo",
		"fixme",
		"note",
		"notes",
		"lens",
		"keyword",
		"highlight",
		"syntax",
		"annotation"
	],
	"homepage": "https://gitlab.com/fooxly/vscode-provision-lens",
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/fooxly/vscode-provision-lens.git"
	},
	"bugs": {
		"url": "https://gitlab.com/fooxly/vscode-provision-lens/issues",
		"email": "bugs@fooxly.com"
	},
	"galleryBanner": {
		"color": "#272729",
		"theme": "dark"
	},
	"version": "1.2.11",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./lib/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "provisionlens.list",
				"title": "Provision Lens: List"
			},
			{
				"command": "provisionlens.lastNote",
				"title": "Provision Lens: Previous Note"
			},
			{
				"command": "provisionlens.nextNote",
				"title": "Provision Lens: Next Note"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "provisionlens.lastNote",
					"group": "provisionlens@1"
				},
				{
					"command": "provisionlens.nextNote",
					"group": "provisionlens@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "provisionlens.lastNote",
				"key": "ctrl+L",
				"mac": "cmd+L",
				"when": "editorTextFocus"
			},
			{
				"command": "provisionlens.nextNote",
				"key": "ctrl+N",
				"mac": "cmd+N",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Provision lens",
			"properties": {
				"provisionlens.translations": {
					"type": "object",
					"title": "Translations",
					"description": "List of translation keys for every language",
					"properties": {
						"noNoteFound": {
							"type": "string",
							"description": "The text that will be shown when there are no more notes found past the current cursor point"
						}
					}
				},
				"provisionlens.include": {
					"type": "array",
					"description": "A list of files and folders which should not be excluded but are inside a ignore file",
					"items": {
						"type": "string",
						"description": "The path or filename "
					}
				},
				"provisionlens.ignoreFiles": {
					"type": "array",
					"description": "List of different ignore files you have in your workspaces to exclude files/folders",
					"items": {
						"type": "string",
						"description": "The file name where the excluded files are listed in"
					},
					"default": [
						".gitignore",
						".ignore"
					]
				},
				"provisionlens.showLensAboveClasses": {
					"type": "boolean",
					"default": true,
					"description": "Show a seperate lens above each class with the scope set to that class and its children"
				},
				"provisionlens.showLensAboveFunctions": {
					"type": "boolean",
					"default": true,
					"description": "Show a seperate lens above each function with the scope set to that function and its children"
				},
				"provisionlens.dropdownOrdering": {
					"type": "string",
					"enum": [
						"line_numbers_asc",
						"line_numbers_desc",
						"category"
					],
					"default": "line_numbers_asc",
					"description": "The way the dropdown needs to be organized"
				},
				"provisionlens.useHighlighting": {
					"type": "boolean",
					"default": true,
					"description": "If you want to use our syntax highlighting"
				},
				"provisionlens.hideWhenZero": {
					"type": "boolean",
					"default": true,
					"description": "If there are 0 results in a single group the lens won't be visible"
				},
				"provisionlens.keywords": {
					"type": "object",
					"description": "All the keywords that need to be tracked",
					"default": {
						"TODO": {
							"color": "#fff",
							"backgroundColor": "#f2b01f",
							"overviewRulerColor": "rgba(242, 176, 31, 0.8)",
							"isWholeLine": false,
							"colorSpaceAfter": false,
							"caseSensitive": true
						},
						"FIXME": {
							"color": "#fff",
							"backgroundColor": "#d85f88",
							"overviewRulerColor": "rgba(216, 95, 136, 0.8)",
							"isWholeLine": false,
							"colorSpaceAfter": false,
							"caseSensitive": true
						},
						"NOTE": {
							"color": "#aaa",
							"backgroundColor": "#434343",
							"overviewRulerColor": "rgba(67, 67, 67, 0.8)",
							"isWholeLine": false,
							"colorSpaceAfter": false,
							"caseSensitive": true
						}
					}
				},
				"provisionlens.groups": {
					"type": "array",
					"description": "The different groups for the keywords",
					"items": {
						"type": "object",
						"title": "A keyword group object",
						"properties": {
							"keywords": {
								"type": "array",
								"description": "The keywords that belong to this group",
								"items": {
									"type": "string",
									"title": "The keyword that belongs to the group (not case sensitive)"
								}
							},
							"text": {
								"type": [
									"object",
									"string"
								],
								"description": "The text color of the keyword",
								"properties": {
									"one": {
										"type": "string",
										"description": "The text that will be shown when there is only 1 item"
									},
									"multiple": {
										"type": "string",
										"description": "The text that will be shown when there are 0 or more than 1 items"
									}
								}
							}
						}
					},
					"default": [
						{
							"keywords": [
								"TODO",
								"FIXME"
							],
							"text": {
								"one": "üìù {0} TODO",
								"multiple": "üìù {0} TODOs"
							}
						},
						{
							"keywords": [
								"NOTE"
							],
							"text": "üìù {0} Notes"
						}
					]
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.9",
		"babel-cli": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"eslint": "^5.13.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"lodash": "^4.17.11"
	}
}
