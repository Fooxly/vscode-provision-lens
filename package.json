{
	"name": "todo-lens",
	"displayName": "TODO lens",
	"description": "A TODO/Notes lens based on keywords",
  "author": "Fooxly",
  "publisher": "Fooxly",
  "license": "MIT",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.33.0"
	},
  "keywords": [
    "vscode",
    "code",
    "metrics",
    "typescript",
		"javascript",
		"php",
		"todo",
		"highlight"
  ],
	"categories": [
		"Other"
	],
	"activationEvents": [
    "*"
	],
	"main": "./lib/extension.js",
	"contributes": {
		"commands": [
      {
        "command": "todolens.toggleLens",
        "title": "toggle Todo lens"
      }
		],
		"configuration": {
			"type": "object",
			"title": "TODO lens",
			"properties": {
				"todolens.hideWhenZero": {
					"type": "boolean",
					"default": true,
					"description": "If there are 0 TODO's in a single section it will not be shown"
				},
				"todolens.caseSensitive": {
					"type": "boolean",
					"default": false,
					"description": "If the keywords need to be case sensitive or not"
				},
				"todolens.types": {
					"type": "array",
					"items": {
						"type": "object",
						"title": "A single todo object",
						"properties": {
							"title": {
								"type": "string",
								"description": "The title that will be used at the top of each file"
							},
							"types": {
								"type": "array",
								"items": {
									"type": "string",
									"title": "Keyword"
								}
							}
							
						}
					},
					"default": [{
							"title": "üìù {0} Todos",
							"types": [
								"TODO",
								"FIXME"
							]
						},
						{
							"title": "üìù {0} Notes",
							"types": [
								"NOTE"
							]
						}
					],
					"description": "All the different types of lenses"
				}
			}
		}	
	},

	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"babel-cli": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"eslint": "^5.13.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
